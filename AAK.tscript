//This is called when the server is initially set up by the game application
function AAK::initServer(%this)
{
   //Sample content
   if(IsDirectory("./Samples/"))
   {
      %this.queueExec("./scripts/server/shapeBase");
      //%this.queueExec("./scripts/server/aiPlayer");
      %this.queueExec("./scripts/server/camera");
      %this.queueExec("./scripts/server/commands");
      %this.queueExec("./scripts/server/player");
      %this.queueExec("./scripts/server/spawn");
   }
   
	%this.queueExec("./scripts/server/ActionAdventureGame");

	
}

//This is called when the server is created for an actual game/map to be played
function AAK::onCreateGameServer(%this)
{
   //Sample content
   if(IsDirectory("./Samples/"))
   {
      %this.registerDatablock("./scripts/datablocks/sounds");
      %this.registerDatablock("./scripts/datablocks/player");
      %this.registerDatablock("./scripts/datablocks/aiPlayer");
      %this.registerDatablock("./scripts/datablocks/dust");
   }
	
	%this.registerDatablock("./scripts/datablocks/camera");
	%this.registerDatablock("./scripts/datablocks/triggers");	
}

//This is called when the server is shut down due to the game/map being exited
function AAK::onDestroyGameServer(%this)
{
}

//This is called when the client is initially set up by the game application
function AAK::initClient(%this)
{
   if(IsDirectory("./Samples/"))
   {
      if (!$Server::Dedicated)
      {
         //client scripts
         $KeybindPath = "./scripts/client/default.keybinds." @ $TorqueScriptFileExtension;
         exec($KeybindPath);
         
         %prefPath = getPrefpath();
         if(isFile(%prefPath @ "/keybinds." @ $TorqueScriptFileExtension))
            exec(%prefPath @ "/keybinds");
         
         //gui
         //

         exec("./scripts/client/inputCommands"); 
           
         //client only sounds
         %this.queueExec("./art/clientMusic");
      }
   }
}

